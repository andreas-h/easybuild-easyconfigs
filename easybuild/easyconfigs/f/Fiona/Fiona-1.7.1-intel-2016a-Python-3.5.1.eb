easyblock = 'Bundle'

name = 'Fiona'
version = '1.7.1'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/Toblerity/Fiona'
description = """Fiona reads and writes spatial data files."""

toolchain = {'name': 'intel', 'version': '2016a'}

# this is a bundle of Python packages
exts_defaultclass = 'PythonPackage'

dependencies = [
    ('Python', '3.5.1'),
    ('GDAL', '2.1.0', '-Python-%(pyver)s'),
]

exts_defaultclass = 'PythonPackage'

exts_list = [
    ('click', '6.6', {  # cligj dependency
        'source_urls': ['https://pypi.python.org/packages/source/c/click/'],
    }),
    ('cligj', '0.4.0', {  # fiona dependency
        'source_urls': ['https://pypi.python.org/packages/source/c/cligj/'],
    }),
    ('munch', '2.0.4', {  # fiona dependency
        'source_urls': ['https://pypi.python.org/packages/source/m/munch/'],
    }), 
    ('Fiona', '1.7.1', {
        'modulename': 'fiona',
        'source_urls': ['https://pypi.python.org/packages/source/f/fiona/'],
    }),
]

modextrapaths = {'PYTHONPATH': ['lib/python%(pyshortver)s/site-packages']}

moduleclass = 'lang'
