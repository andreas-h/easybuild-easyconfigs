easyblock = 'PythonPackage'

name = 'Cartopy'
version = '0.14.2'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://scitools.org.uk/cartopy/'
description = """Cartopy is a Python package designed to make drawing maps for data analysis and visualisation as easy as possible."""

toolchain = {'name': 'intel', 'version': '2016a'}

source_urls = ['https://github.com/SciTools/Cartopy/archive/']
sources = ['v%(version)s.tar.gz']

dependencies = [
    ('Python', '3.5.1'),
    ('PROJ', '4.9.2'),
    ('matplotlib', '1.5.1', '-Python-%(pyver)s'),
    ('Pillow', '3.4.2', '-Python-%(pyver)s'),
    ('GEOS', '3.5.0', '-Python-%(pyver)s'),
    ('libxml2', '2.9.3'),  # needed for OWSLib

]

exts_defaultclass = 'PythonPackage'
exts_filter = ("python -c 'import %(ext_name)s'", '')

exts_list = [
    ('pyshp', '1.2.10', {
        'modulename': 'shapefile',
        'source_urls': ['https://pypi.python.org/packages/source/p/pyshp/'],
    }),
    ('Shapely', '1.5.17', {
        'modulename': 'shapely',
        'source_urls': ['https://pypi.python.org/packages/source/s/Shapely/'],
    }),
    ('pyepsg', '0.3.1', {
        'source_urls': ['https://github.com/rhattersley/pyepsg/archive/'],
        'source_tmpl': 'v%(version)s.tar.gz',

    }),
    ('OWSLib', '0.13.0', {
        'source_urls': ['https://pypi.python.org/packages/source/o/OWSLib/'],

    }),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'geo'
